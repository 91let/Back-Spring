<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.beer.model.dao.BeerCommentDAO">
	<select id="search" resultType="beercomment">
		select * from BEER_COMMENT;
	</select>

	<insert id="insert" parameterType="beercomment">
		insert into BEER_COMMENT values(#{commentId}, #{userId}, #{beerId}, SYSDATE(), #{contents})
	</insert>

	<update id="update" parameterType="beercomment">
		update BEER_COMMENT set
		date = SYSDATE(),
		contents = #{contents}
		where commentId = #{commentId}
	</update>



	<delete id="delete" parameterType="int">
		delete from BEER_COMMENT
		where commentId = #{commentId}
	</delete>
</mapper>